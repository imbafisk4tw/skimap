{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Skimap resorts.json schema (current data model)",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": true,
    "required": [
      "name",
      "lat",
      "lon",
      "sct",
      "ssc",
      "website",
      "groupId",
      "groupName",
      "entryType",
      "entryName"
    ],
    "properties": {
      "name": { "type": "string", "minLength": 1 },

      "lat": { "type": "number", "minimum": -90, "maximum": 90 },
      "lon": { "type": "number", "minimum": -180, "maximum": 180 },

      "sct": { "type": "boolean" },
      "ssc": { "type": "boolean" },

      "nearMuc": { "type": "boolean" },
      "glacier": { "type": "boolean" },

      "region": { "type": "string", "minLength": 1 },
      "country": { "type": "string", "minLength": 1 },

      "website": {
        "type": "string",
        "description": "Empty string allowed if website unknown; otherwise should be http(s) URL.",
        "pattern": "^$|^https?://"
      },

      "groupId": {
        "type": "string",
        "minLength": 1,
        "pattern": "^[a-z0-9-]+$"
      },
      "groupName": { "type": "string", "minLength": 1 },

      "entryType": {
        "type": "string",
        "enum": ["main", "entry"]
      },
      "entryName": { "type": "string", "minLength": 1 }
    }
  }
}
